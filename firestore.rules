rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 1) Users collection: only the authenticated owner may read/write their document
    //    Admins (custom claim `admin == true`) can manage any user.
    match /users/{userId} {
      allow create: if request.auth != null && (request.auth.uid == userId || request.auth.token.admin == true);
      allow read: if request.auth != null && (request.auth.uid == userId || request.auth.token.admin == true);
      allow update, delete: if request.auth != null && (request.auth.uid == userId || request.auth.token.admin == true);
    }

    // 2) Devices collection example: owners can create/update/delete their own device docs
    //    Admins (custom claim `admin == true`) can manage any device.
    match /devices/{deviceId} {
      allow read: if request.auth != null; // authenticated users can read devices
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if request.auth != null && (
        resource.data.ownerId == request.auth.uid ||
        (request.auth.token.admin == true)
      );
    }

    // 3) Public posts example: anyone can read, only authenticated users can create,
    //    and only the author can update/delete their post.
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.authorId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.authorId == request.auth.uid;
    }

    // 4) Fallback rule: allow authenticated reads, but deny writes by default.
    //    Add explicit matches above for collections that require write access.
    match /{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
  }
}
